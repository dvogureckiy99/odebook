        ob.phaseportrait(lambda X, t=0: np.array([7.0*X[0]-9.0*X[1], 9*X[0]-7.0*X[1]]), 
                         [[x,-x] for x in np.linspace(0,20,20)/3], [-2,2], n=150,
                         head_length=0.3, head_width=0.15, linewidth=1)
